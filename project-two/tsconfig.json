{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src","types.d.ts","src/**/*.ts","src/types/**/*.d.ts","types/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}